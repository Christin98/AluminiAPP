<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="ios_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter</item>
        <item name="background">?attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Filter"</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Regular">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">sans-serif</item>
    </style>

    <style name="Italic">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">sans-serif</item>
    </style>


    <style name="Bold">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">sans-serif</item>
    </style>

    <style name="BoldItalic">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:text">sans-serif</item>
    </style>

    <style name="RegularCondensed">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">sans-serif-condensed</item>
    </style>

    <style name="ItalicCondensed">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">sans-serif-condensed</item>
    </style>


    <style name="BoldCondensed">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">sans-serif-condensed</item>
    </style>

    <style name="Casual">
        <item name="fontFamily">casual</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">Casual</item>
    </style>

    <style name="Cursive">
        <item name="fontFamily">cursive</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">Cursive</item>
    </style>

    <style name="RegularMono">
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItalicMono">
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">monospace</item>
    </style>

    <style name="BoldMono">
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">monospace</item>
    </style>

    <style name="RegularMonoSerif">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ItalicMonoSerif">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="BoldMonoSerif">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">serif-monospace</item>
    </style>

</resources>
